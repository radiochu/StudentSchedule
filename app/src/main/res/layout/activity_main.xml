<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:fitsSystemWindows="true">

    <TextView
            android:text="@string/school_district"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/school_district"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
            android:text="@string/student_planner"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/main_screen_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/school_district" />

    <Button
            android:text="@string/classes"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/my_classes_button"
            app:layout_constraintTop_toBottomOf="@+id/main_screen_subtitle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/my_assignments_button"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            />

    <Button
            android:text="@string/assignments"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_assignments_button"
            app:layout_constraintTop_toBottomOf="@+id/my_classes_button"
            app:layout_constraintBottom_toTopOf="@+id/reports_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            />

    <Button
            android:text="@string/reports"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reports_button"
            app:layout_constraintTop_toBottomOf="@+id/my_assignments_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="233dp"
            app:srcCompat="@drawable/pixabay_davidrockdesign"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/school_district"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>